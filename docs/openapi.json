{
  "openapi": "3.1.0",
  "info": {
    "title": "Timesheet API",
    "version": "2.0.0",
    "description": "API for managing workers and timesheets synchronized from Microsoft Graph."
  },
  "paths": {
    "/workers": {
      "get": {
        "summary": "List workers",
        "responses": {
          "200": {
            "description": "Array of workers",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Worker" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create worker",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/WorkerInput" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Worker" }
              }
            }
          }
        }
      }
    },
    "/workers/{id}": {
      "parameters": [
        { "name": "id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } }
      ],
      "get": {
        "summary": "Get worker",
        "responses": {
          "200": {
            "description": "Worker",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Worker" } } }
          },
          "404": { "description": "Not found" }
        }
      },
      "put": {
        "summary": "Update worker",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/WorkerUpdate" } }
          }
        },
        "responses": {
          "200": {
            "description": "Updated",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Worker" } } }
          }
        }
      },
      "delete": {
        "summary": "Archive worker",
        "responses": { "204": { "description": "Archived" } }
      }
    },
    "/workers/{id}/restore": {
      "post": {
        "summary": "Restore worker",
        "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } } ],
        "responses": {
          "200": {
            "description": "Worker",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Worker" } } }
          }
        }
      }
    },
    "/workers/{id}/time-entries": {
      "get": {
        "summary": "List time entries for worker",
        "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "string", "format": "uuid" } } ],
        "responses": {
          "200": {
            "description": "Array of time entries",
            "content": {
              "application/json": {
                "schema": { "type": "array", "items": { "$ref": "#/components/schemas/TimeEntry" } }
              }
            }
          }
        }
      }
    },
    "/sync/{teamId}": {
      "post": {
        "summary": "Synchronize workers, time entries and leaves from Microsoft Graph",
        "parameters": [ { "name": "teamId", "in": "path", "required": true, "schema": { "type": "string" } } ],
        "responses": { "202": { "description": "Sync accepted" } }
      }
    }
  },
  "components": {
    "schemas": {
      "Worker": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "employeeKey": { "type": "string" },
          "fullName": { "type": "string" },
          "team": { "type": "string", "nullable": true },
          "role": { "type": "string", "nullable": true },
          "archivedAt": { "type": "string", "format": "date-time", "nullable": true }
        },
        "required": ["id", "employeeKey", "fullName"]
      },
      "WorkerInput": {
        "type": "object",
        "properties": {
          "employeeKey": { "type": "string" },
          "fullName": { "type": "string" },
          "team": { "type": "string", "nullable": true },
          "role": { "type": "string", "nullable": true }
        },
        "required": ["employeeKey", "fullName"]
      },
      "WorkerUpdate": {
        "type": "object",
        "properties": {
          "employeeKey": { "type": "string", "nullable": true },
          "fullName": { "type": "string", "nullable": true },
          "team": { "type": "string", "nullable": true },
          "role": { "type": "string", "nullable": true }
        }
      },
      "TimeEntry": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "date": { "type": "string", "format": "date" },
          "startAt": { "type": "string", "format": "date-time" },
          "endAt": { "type": "string", "format": "date-time" },
          "breaks": { "type": "array", "items": { "$ref": "#/components/schemas/Break" } }
        },
        "required": ["id", "date", "startAt", "endAt", "breaks"]
      },
      "Break": {
        "type": "object",
        "properties": {
          "startAt": { "type": "string", "format": "date-time" },
          "endAt": { "type": "string", "format": "date-time" }
        },
        "required": ["startAt", "endAt"]
      }
    }
  }
}
